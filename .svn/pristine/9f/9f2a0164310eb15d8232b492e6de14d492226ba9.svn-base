.title {
	margin:0; 
	padding:0;
	font-size: 1em;
	color: #fff;
	text-align: center;
	height: 50px;
	line-height: 50px;
	background: #0080FF;
}
.title a i{
	float:right;
	line-height:50px;
	margin:0 15px 0 0;
	color: #fff;
}
.title a{
	cursor:pointer;	
}
article{
	padding:0 0 0 10px;
}
.biaoti{
	font-size:1.2em;
	width:100%;
}
.ticket{
	display: -webkit-box;
	list-style: none;
	font-size:1px;
	padding:0;
}
.ticket li {
	-webkit-box-flex: 1;
	position: relative;
	width:1px;
}
.ticket li a {
	display: block;
	background: #fff;
	color: #000;
	margin-right: 10px;
	text-align: center;
	padding:12px 0 12px 0;
	border: 1px solid #DDDDDD;
	text-decoration: none;
}
.ticket li input[type="radio"] + label{
	position:absolute; 
	display:block; 
	top:0; 
	right:0; 
	left:0; 
	bottom:0;
}
.ticket li input[type="radio"] + label span{
	display:inline-block;
	position:absolute; right:6px; bottom:2px;
	width:17px;
	height:17px;
	margin-right:5px;
	vertical-align:middle;    
}
.ticket li input[type="radio"]:checked + label span{ 
	background:url(../images/checkbox.jpg) 0 0 no-repeat;
	background-size:17px;
}
input[type="radio"],input[type="checkbox"]{
	display: none;
}
hr{
	margin:0 10px 0 10px;
	border:1px solid #DDDDDD;
}
.confirm, .btn {
	display: block;
	width: 80%;
	height: 30px;
	color: #fff;
	margin: 20px auto;
	border-radius: 5px;
	border: 0 none;
	font-size: 1em;
	border: 1px solid #1c8eff;
	background: linear-gradient(to bottom, #3a86c2 0%,#3a86c2 100%);
	cursor:pointer;	
}
.zhichi{
	display: -webkit-box;
	list-style: none;
	font-size:1px;
	padding:0;
}
.zhichi li {
	-webkit-box-flex: 1;
	position: relative;
	width:1px;
}
.zhichi li a {
	display: block;
	background: #fff;
	color: #000;
	margin-left:10px;
	text-align: left;
	padding:12px 0 12px 0;
	font-size:16px;
	text-decoration: none;
}
.zhichi li input[type="checkbox"] + label{
	position:absolute; 
	display:block; 
	top:0; 
	right:0; 
	left:0; 
	bottom:-10px;
}
.zhichi li input[type="checkbox"] + label span{
	display:inline-block;
	position:absolute; right:6px; bottom:2px;
	width:100px;
	height:50px;
	margin-right:5px;
	vertical-align:middle;  
	background:url(../images/anniu.jpg) 0 0 no-repeat;
	background-size:80px;
}
.zhichi li input[type="checkbox"]:checked + label span{ 
	background:url(../images/anniu.jpg) 0 -50px no-repeat;
	background-size:80px;
}

.wrapper_top{position:absolute; display:none; background:rgba(0,0,0,.5); top:0; height:100%; left:0; right:0;}
