.warn .warnneirong{padding:10px 0;}
.warn .warnneirong input[type="text"]{margin:0 0 0 10px;border:0; value-color:#ddd;height:25px;width:80%;}
.warn .warnneirong hr{margin:0 10px 10px 0;}


